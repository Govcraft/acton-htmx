[package]
name = "{{project_name}}"
version = "0.1.0"
edition = "2021"
rust-version = "1.75"

[dependencies]
# acton-dx re-exports: tokio, axum, tower, tower-http, tracing, tracing-subscriber,
# serde, serde_json, sqlx, askama, validator, anyhow, thiserror, acton-reactive
acton-dx = { version = "1.0.0-beta.8", default-features = false, features = ["postgres"] }

[dev-dependencies]
http-body-util = "0.1"

[profile.dev]
opt-level = 0

[profile.release]
opt-level = 3
lto = true
codegen-units = 1
